#This is MakeFile#

OBJS= ui_main.o tokenizer.o
# make has a "default rule" specifiying how to build a an "object" file (.o) from a C source file (c)
# 	this rule includes $(CFLAGS) as one of cc's parameters 

CFLAGS=-g -O3

# first target is built by default. Usually named "all"
all: runtok

# runtok (target) depends on all object files (prerequisites)
runtok: $(OBJS)
	cc -o runtok $(CFLAGS) $(OBJS)

# all object file built from c files that include tokenizer.h
$(OBJS): tokenizer.h 

# deletes flies generated by compilation
clean:
	rm -f *.o runtok

run: runtok
	./runtok
